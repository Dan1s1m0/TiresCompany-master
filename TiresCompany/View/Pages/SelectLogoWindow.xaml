<Window x:Class="TiresCompany.View.Pages.SelectLogoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiresCompany.View.Pages"
        mc:Ignorable="d"
        Title="Выбор изображения" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView x:Name="LogoListView" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Auto">
         
        </ListView>
        <Button Grid.Row="1" x:Name="AttachButton"
                Content="Выбрать изображение"
                Click="AttachButtonClick"/>
    </Grid>
</Window>
